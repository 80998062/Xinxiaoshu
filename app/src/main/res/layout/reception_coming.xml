<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="35dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:contentPaddingBottom="24dp"
            app:contentPaddingTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:minWidth="220dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/gap_15"
                android:paddingRight="@dimen/gap_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_warning"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_8"
                        android:layout_marginStart="@dimen/gap_8"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        tools:text="请求排版"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@color/theme_red"/>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_10"
                        android:layout_toRightOf="@+id/avatar"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxWidth="100dp"
                        android:text="沙漠飞雪沙漠飞雪沙漠飞雪沙漠飞雪沙漠飞雪沙漠飞雪"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginLeft="@dimen/gap_10"
                        android:layout_marginTop="@dimen/gap_8"
                        android:layout_toRightOf="@+id/avatar"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxWidth="100dp"
                        android:text="福建 厦门"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_12"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/fab"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_oval_red"
            android:elevation="4dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@string/action_reception_get"/>
    </RelativeLayout>
</layout>